{
    // Launch requires the Cortex-Debug plugin for VSCode:
    // https://marketplace.visualstudio.com/items?itemName=marus25.cortex-debug
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "build/application.elf",
            "name": "J-Link Application",
            "request": "launch",
            "type": "cortex-debug",
            "device": "nRF52840_XXAA",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "svdFile": "libraries/nrfx/mdk/nrf52840.svd",
            "preLaunchTask": "Build",
            "internalConsoleOptions": "neverOpen",
            "loadFiles": [
                "libraries/softdevice/s140_nrf52_7.3.0_softdevice.hex",
            ],
            "preLaunchCommands": [
                "monitor halt",
                "monitor speed 2000",
                "load"
            ]
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "build/bootloader.elf",
            "name": "J-Link Bootloader",
            "request": "launch",
            "type": "cortex-debug",
            "device": "nRF52840_XXAA",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "svdFile": "libraries/nrfx/mdk/nrf52840.svd",
            "preLaunchTask": "Build",
            "internalConsoleOptions": "neverOpen",
            "loadFiles": [
                "libraries/softdevice/s140_nrf52_7.3.0_softdevice.hex",
            ],
            "preLaunchCommands": [
                "monitor halt",
                "monitor speed 2000",
                "load"
            ]
        }
    ]
}